<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointments</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Correct CSS path -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <h1>Appointment List</h1>
    <ul>
        <% appointments.forEach(appointment => { %>
            <li>
                
                    <strong><%= appointment.name %></strong>  
                    - <%= new Date(appointment.date).toLocaleDateString("en-GB") %>  
                    - <%= appointment.time ? new Date('1970-01-01T' + appointment.time).toLocaleTimeString("en-US", { hour: '2-digit', minute: '2-digit', hour12: true }) : 'N/A' %>
                
                
                
                <!-- Edit Button -->
                <form action="/appointments/edit/<%= appointment._id %>" method="GET" style="display:inline;">
                    <button type="submit">Edit</button>
                </form>
                
                <!-- Delete Form -->
                <form action="/appointments/<%= appointment._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <h2>Add Appointment</h2>
    <form action="/appointments" method="POST" class="p-3 bg-light rounded shadow-sm w-50 mx-auto">
        <input type="text" name="name" class="form-control mb-2" placeholder="Name" required>
        <input type="date" name="date" class="form-control mb-2" required>
        <input type="time" name="time" class="form-control mb-2" required>
        <button type="submit" class="btn btn-primary w-100">Add Appointment</button>
    </form>
        
</body>
</html>
